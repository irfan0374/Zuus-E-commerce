<%- include('./layout/admin_header.ejs')%>

<div class="card-body">
    <div class="table-responsive">
        <div class="table-responsive">
            <table class="table align-middle table-nowrap mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="text-center">
                            <div class="form-check align-middle">
                               
                                <label class="form-check-label" for="transactionCheck01"></label>
                            </div>
                        </th>
                        <!-- <th class="align-middle" scope="col">Order ID</th> -->
                        <th class="align-middle" scope="col">Name</th>
                        <th class="align-middle" scope="col">Email</th>
                        <th class="align-middle" scope="col">MobileNumber</th>
                        <th class="align-middle" scope="col">status</th>
                        <th class="align-middle" scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <%
                    if(users.length>0){
                        for(let i=0;i<users.length;i++){
                            %>                   
                    <tr>
                        
                        <td><a href="#" class="fw-bold"></a></td>
                        <td class="px-4 py-3 text-xs"><%=users[i].name %></td>
                        <td class="px-4 py-3 text-xs"><%=users[i].email %></td>
                        <td><i class="px-4 py-3 text-xs"></i> <%=users[i].phone %></td>
                        <td class="px-4 py-3 text-xs">
                            <% if(users[i].is_verified==0){ %>
                                <span class="badge badge-pill badge-soft-danger">
                                Not verified
                              </span>

                          <%  }else{ %>
                            <span class="badge badge-pill badge-soft-success">
                                 verified
                              </span>
                        <%  } %>
                        </td>
                        
                        <td>
                           <% if(users[i].is_block === false){ %> 
                                <a href="/admin/userBlock/<%=users[i]._id %>" class="btn btn-danger btn-sm"> Block</a>
                            <% }else{ %>
                                <a href="/admin/userBlock/<%=users[i]._id %>" class="btn btn-success btn-sm"> Unblock</a>
                            <% } %>
                        </td>
                    </tr>
                    <%
                }
            }else{
                %>
                <tr>
                    <td colspan="5">user not found</td>
                </tr>
                <%
            }
            %>
                 
                </tbody>
            </table>
        </div>
    </div>

<%- include('./layout/admin_footer.ejs')%>