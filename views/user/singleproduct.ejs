<%- include('./layouts/header.ejs')%>
<style>
	.banner-content {
	  /* Add margin to the top of the banner area */
	  margin-top: 150px;
	}
  
	.banner-content nav a {
	  /* Add margin between breadcrumb links */
	  margin-right: 10px;
	}
  

	.page-navigation {
	  /* Adjust margin for the navigation bar at the bottom */
	  margin-top: 40px;
	  text-align: center; /* Center align the navigation elements */
	}
  
	
  </style>
  
	<!-- Start Banner Area -->
	
	<div class="banner-content">
		<div class="col-first">
		  <h1>Product Details Page</h1>
		  <nav class="d-flex align-items-center">
			<a href="/home"><span class="lnr lnr-arrow-right">Home</span></a>
			<a href="/product">Shop<span class="lnr lnr-arrow-right"></span></a>
			<a href="single-product.html">Product Details</a>
		  </nav>
		</div>
	  </div>
		
	
	<!-- End Banner Area -->

	<!--================Single Product Area =================-->
	<br>
	<div id="reloadDiv">
	<div class="product_image_area">
	  <div class="container">
		<div class="row s_product_inner">
		  <div class="col-lg-6">
			<div id="product-carousel" class="carousel slide" data-ride="carousel">
			  <div class="carousel-inner">

				<% for(let i=0; i<proData.image.length; i++){ %>
				<div class="carousel-item <%= i === 0 ? 'active' : '' %>">
				  <div class="single-prd-item">
					<img class="d-block w-100 product-image" src="/admin_asset/imgs/<%=proData.image[i]%>" alt="">
				  </div>
				</div>
				<% } %>
			  </div>
			  <a class="carousel-control-prev" href="#product-carousel" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			  </a>
			  <a class="carousel-control-next" href="#product-carousel" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			  </a>
			</div>
		  </div>
		  <div class="col-lg-6">
			<div class="s_product_text">
			  <h3><%=proData.name%></h3>
			  <h2>â‚¹<%=proData.price%></h2>
			  <ul class="list">
				<li><a class="active" href="#"><span>Category :</span><%=proData.category%></a></li>
				<li><a href="#"><span>Availability :</span><%=proData.stock%></a></li>
			  </ul>
			  <p><%=proData.description%></p>
			 
			  <div class="card_area d-flex align-items-center">
				<a href="#" class="primary-btn" onclick="addtocart('<%=proData._id%>')">Add to Cart</a>
				<a class="icon_btn" href="" onclick="addWishlist('<%=proData._id%>')"><i class="lnr lnr lnr-heart"></i></a>
			  </div>
			</div>
		  </div>
		</div>
	  </div>
	</div>
	</div>
	

	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


