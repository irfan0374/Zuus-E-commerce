<%- include('./layouts/header.ejs')%>

<style>
    /* Your existing styles here */

    /* Additional styles for the wishlist table */
    .wishlist_area {
        margin-top: 30px;
    }

    .wishlist-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        background-color: #f7f7f7;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .wishlist-table th,
    .wishlist-table td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ccc;
    }

    .wishlist-table img {
        max-width: 100px;
        height: auto;
    }

    /* Additional styles for buttons and icons */
    .btn {
        border-radius: 20px;
        font-size: 14px;
    }

    .btn i {
        margin-right: 5px;
    }

    /* Styling for the table header */
    .wishlist-table th {
        background-color: #f5f5f5;
        font-weight: bold;
    }

    /* Hover effect for buttons */
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }
    
		.banner-content {
		  /* Add margin to the top of the banner area */
		  margin-top: 150px;
		}
	  
		.banner-content nav a {
		  /* Add margin between breadcrumb links */
		  margin-right: 10px;
		}
	  
	
		.page-navigation {
		  /* Adjust margin for the navigation bar at the bottom */
		  margin-top: 40px;
		  text-align: center; /* Center align the navigation elements */
		}
	  
</style>
</head>

<body>
       	
		<div class="banner-content">
			<div class="col-first">
			  <h1>Wish List</h1>
			  <nav class="d-flex align-items-center">
				<a href="/home"><span class="lnr lnr-arrow-right">Home</span></a>
				<a href="#">Wishlist</span></a>
			  </nav>
			</div>
		  </div>
      

    <!--================Wishlist Area =================-->
    <div id="reloadDiv">
    <section class="wishlist_area">
        <div class="container">
            <% if (wishlist && wishlist.products && wishlist.products.length > 0) { %>
            <table class="wishlist-table">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Image</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% wishlist.products.forEach((wish) => { %>
                    <tr>
                        <td><%= wish.productsId.name %></td>
                        <td><img src="/admin_asset/imgs/<%= wish.productsId.image[0] %>" alt="Product Image"></td>
                        <td>â‚¹ <%= wish.productsId.price %></td>
                        <td>
                            <a href="#" onclick="addToCart('<%=wish.productsId._id %>')" class="btn btn-success">
                                <i class="bi-cart-plus"></i> Add to Cart
                            </a>
                            <a href="#" onclick="deleteWishlist('<%=wish.productsId._id %>')" class="btn btn-danger">
                                <i class="bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } else { %>
                <div class="container">
                    <div class="row mt-5">
                      <div class="col-md-6 offset-md-3">
                        <div class="alert alert-info text-center" role="alert">
                          No items in the wishlist
                        </div>
                      </div>
                    </div>
                  </div>
            <% } %>
        </div>
    </section>
</div>
    <!--================End Wishlist Area =================-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.all.min.js"></script>

    <script>
        
        function addToCart(productId) {
    $.ajax({
        url: '/addcart',
        method: 'post',
        data: {
            productId: productId
        },
        success: (response) => {
            if (response.success) {
                Swal.fire({
                    title: '',
                    text: 'Added to cart',
                    icon: 'Question',
                    timer: 1500
                });
				let a=	document.querySelector('#cartCount span').innerHTML 
                document.querySelector('#cartCount span').innerHTML=parseInt(a)+1
            } else {
                Swal.fire({
                    title: '',
                    text: response.message,
                    icon: 'Warning',
                    timer: 1500
                });
            }
        },
        error: (err) => {
            Swal.fire({
                title: 'Oops',
                text: 'Something went wrong',
                icon: 'error',
                timer: 1500
            });
        }
    });
}

function deleteWishlist(productId){
    $.ajax({
        url:'/deleteWishlist',
        method:'post',
        data:{
            productId:productId
        },
        success:(response)=>{
            if(response.success){
                $('#reloadDiv').load('/wishlist #reloadDiv',()=>{
                    Swal.fire({
							title:'success',
							text:'product delete!! ',
							icon:'success',
							timer:1500
						})
                })
            }else{
                Swal.fire({
						title:'oops',
						text:response.message,
						icon:error,
						timer:1500

					})
            }
        },
        error:(err)=>{
            Swal.fire({
                title:"oops",
                text:"something went wrong",
                icon:error,
                timer:1500
            })
        }
    })
}
    </script>
